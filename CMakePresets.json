{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Visual Studio 17 2022",
            "hidden": true,
            "toolchainFile": "${sourceDir}/.conan/conan_default_toolchain.cmake",
            "toolset":{
                "strategy": "external"
            },
            "architecture":{
                "strategy": "external"
            },
            "cacheVariables": {
                "CONAN_FORCE_BUILD_PACKAGES": "OFF",
                "CONAN_FORCE_INSTALL": false,
                "CONAN_BUILD_PROFILE": "${sourceDir}/.conan/profiles/${presetName}/build",
                "CONAN_HOST_PROFILE": "${sourceDir}/.conan/profiles/${presetName}/host",
                "BUILD_SHARED_LIBS": true
            }
        },
        {
            "name": "default",
            "generator": "Visual Studio 17 2022",
            "inherits": "base"
        },
        {
            "name": "wsl",
            "binaryDir": "/tmp/conan-toolchain/${presetName}",
            "generator": "Ninja",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "lhs": "${hostSystemName}",
                "type": "equals",
                "rhs": "Linux"
            }
        },
        {
            "name": "mingw",
            "generator": "Ninja",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "condition": {
                "lhs": "${hostSystemName}",
                "type": "equals",
                "rhs": "Windows"
            },
            "environment": {
                "PATH": "C:\\msys64\\ucrt64\\bin;C:\\msys64\\usr\\bin;$penv{PATH}"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configurePreset": "default",
            "configuration": "Release"
        },
        {
            "name": "mingw",
            "configurePreset": "mingw"
        },
        {
            "name": "wsl",
            "configurePreset": "wsl"
        }
    ]
}