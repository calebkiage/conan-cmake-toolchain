{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Visual Studio 17 2022",
            "hidden": true,
            "toolchainFile": "${sourceDir}/.conan/conan_default_toolchain.cmake",
            "cacheVariables": {
                "CONAN_BUILD_PACKAGES": "fmt",
                "CONAN_BUILD_PROFILE": "${sourceDir}/.conan/profiles/${presetName}/build",
                "CONAN_HOST_PROFILE": "${sourceDir}/.conan/profiles/${presetName}/host",
                "CONAN_TOOLCHAIN_FILE": "${sourceDir}/build/${presetName}/conan_toolchain.cmake",
                "BUILD_SHARED_LIBS": true
            }
        },
        {
            "name": "default",
            "generator": "Visual Studio 17 2022",
            "inherits": "base"
        },
        {
            "name": "msvc-clang",
            "generator": "Ninja",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mingw",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configurePreset": "default",
            "configuration": "Release"
        },
        {
            "name": "clang",
            "configurePreset": "clang",
            "configuration": "Debug"
        }
    ]
}