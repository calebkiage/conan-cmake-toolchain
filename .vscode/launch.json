{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(msvc) Launch current config",
            "type": "cppvsdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the conan binaries directory to the PATHs
                    // it gets resolved by CMake Tools:
